{
  "display_name": "星空 Hoshizora",
  "description": "一款简洁的深色系博客主题，带有渐变色和微妙动效。",
  "version": "1.0.0",
  "author": "Noteblog Community",
  "author_website": "https://github.com/streetartist/noteblog",
  "license": "MIT",
  "min_noteblog_version": "1.0.0",
  "is_system": false,
  "supports_widgets": true,
  "supports_menus": true,
  "supports_customizer": true,
  "supports_post_formats": true,
  "screenshot": "/themes/hoshizora/screenshot.png",
  "demo_url": "",
  "config_schema": {
    "site_logo": {
      "type": "text",
      "label": "站点 Logo",
      "description": "建议使用透明 PNG 或 SVG"
    },
    "site_favicon": {
      "type": "text",
      "label": "站点图标",
      "description": "16x16 或 32x32 图标"
    },
    "primary_color": {
      "type": "color",
      "label": "主色",
      "default": "#8d6bff"
    },
    "secondary_color": {
      "type": "color",
      "label": "副色",
      "default": "#ff8bd5"
    },
    "accent_color": {
      "type": "color",
      "label": "强调色",
      "default": "#6ff4ff"
    },
    "gradient_direction": {
      "type": "select",
      "label": "背景渐变方向",
      "options": ["to right", "to left", "to top", "to bottom", "120deg"],
      "default": "120deg"
    },
    "background_texture": {
      "type": "select",
      "label": "背景纹理",
      "options": ["stars", "grid", "waves", "none"],
      "default": "stars"
    },
    "show_sidebar": {
      "type": "checkbox",
      "label": "显示侧边栏",
      "default": true
    },
    "sidebar_widgets": {
      "type": "array",
      "label": "默认侧边栏组件",
      "default": ["profile", "recent_posts", "categories", "tags", "friend_links"]
    },
    "show_excerpt": {
      "type": "checkbox",
      "label": "首页/列表显示摘要",
      "default": true
    },
    "show_tags": {
      "type": "checkbox",
      "label": "显示标签胶囊",
      "default": true
    },
    "enable_parallax": {
      "type": "checkbox",
      "label": "启用视差背景",
      "default": true
    },
    "enable_particle_field": {
      "type": "checkbox",
      "label": "启用背景粒子",
      "default": true
    },
    "default_mode": {
      "type": "select",
      "label": "默认配色模式",
      "options": ["light", "dark"],
      "default": "light"
    },
    "enable_dark_mode_toggle": {
      "type": "checkbox",
      "label": "允许切换深浅色",
      "default": true
    },
    "hero_tagline": {
      "type": "text",
      "label": "Hero 副标题",
      "default": "记录生活，分享思考"
    },
    "hero_cta_text": {
      "type": "text",
      "label": "Hero 主按钮文字",
      "default": "查看文章"
    },
    "hero_cta_link": {
      "type": "text",
      "label": "Hero 主按钮链接",
      "default": "/archives"
    },
    "enable_scroll_indicator": {
      "type": "checkbox",
      "label": "显示阅读进度条",
      "default": true
    },
    "footer_text": {
      "type": "textarea",
      "label": "页脚版权",
      "default": "© 2025 Powered by Noteblog"
    },
    "analytics_code": {
      "type": "textarea",
      "label": "统计/埋点脚本",
      "description": "支持任何 HTML 片段"
    }
  }
}
